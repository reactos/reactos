# Copy .tlb file from here to sdk\lib\*
{}.tlb{$(SDK_LIB_PATH)}.tlb:
    copy $? $@

# Copy .h file from here to sdk\inc
{}.h{$(SDK_INC_PATH)}.h:
    copy $** $@

# Copy .h file from obj dir to sdk\inc
{$O}.h{$(SDK_INC_PATH)}.h:
