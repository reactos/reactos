    hsplit -e -o $(?R).x $(?R)p.x $?
    wcshdr < $(?R).x > $*.h

{}.w{$O}.h:
    hsplit -e -o $(?R).x $(?R)p.x $?
    wcshdr < $(?R).x > $*.h

{}.w{}.h:
    hsplit -e -o $(?R).x $(?R)p.x $?
    wcshdr < $(?R).x > $*.h

