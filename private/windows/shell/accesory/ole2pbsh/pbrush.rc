        MENUITEM SEPARATOR
        MENUITEM "C&opy To...", EDITcopyTo, GRAYED
        MENUITEM "Paste &From...", EDITpasteFrom
      end

    POPUP "&View"
       begin
        MENUITEM "Zoom &In\tCtrl+N", MISCzoomIn
        MENUITEM "Zoom &Out\tCtrl+O", MISCzoomOut
