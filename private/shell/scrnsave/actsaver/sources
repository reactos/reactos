TARGETTYPE          = UMAPPL_NOLIB
TARGETLIBS          =

UMTYPE              = windows
UMAPPL              = actsaver
UMAPPLEXT           = .scr
UMLIBS              = \
                    $(_OBJ_DIR)\*\actsaver.res  \
