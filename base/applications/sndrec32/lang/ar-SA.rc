        MENUITEM SEPARATOR
        MENUITEM "خ&روج", ID_FILE_EXIT
    END
    POPUP "ت&حرير"
    BEGIN
        MENUITEM "&نسخ", ID_EDIT_COPY
        MENUITEM "&لصق إدراج", ID_EDIT_PASTE, GRAYED
        MENUITEM "لصق م&زج", ID_EDIT_PASTEMIX, GRAYED
        MENUITEM SEPARATOR
        MENUITEM "إ&دراج ملف...", ID_EDIT_INSERTFILE
        MENUITEM "م&زج مع ملف...", ID_EDIT_MIXFILE
        MENUITEM SEPARATOR
        MENUITEM "حذف &قبل الموضع الحالي", ID_EDIT_DELETEBEFORE, GRAYED
