        MENUITEM SEPARATOR
        MENUITEM "خصائص ال&صوت", ID_EDIT_AUDIOPROPS
    END
    POPUP "تأ&ثيرات"
    BEGIN
        MENUITEM "&زيادة مستوى الصوت (بنسبة 25%)", ID_EFFECTS_INCVOL
        MENUITEM "خ&فض مستوى الصوت", ID_EFFECTS_DECVOL
