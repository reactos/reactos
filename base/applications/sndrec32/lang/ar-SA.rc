IDR_MENU1 MENU
BEGIN
    POPUP "&ملف"
    BEGIN
        MENUITEM "&جديد", ID_FILE_NEW
        MENUITEM "&فتح...", ID_FILE_OPEN
        MENUITEM "&حفظ", ID_FILE_SAVE, GRAYED
        MENUITEM "حفظ &باسم...", ID_FILE_SAVEAS, GRAYED
