        MENUITEM "زيادة ال&سرعة (بنسبة 100%)", ID_EFFECTS_INCSPD
        MENUITEM "خفض ال&سرعة", ID_EFFECTS_DECSPD
        MENUITEM SEPARATOR
        MENUITEM "إ&ضافة صدى", ID_EFFECTS_ECHO
        MENUITEM "&عكس", ID_EFFECTS_REVERSE
    END
    POPUP "م&ساعدة"
    BEGIN
        MENUITEM "&حول", ID_ABOUT
    END
END

