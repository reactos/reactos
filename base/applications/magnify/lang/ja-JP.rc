LANGUAGE LANG_JAPANESE, SUBLANG_DEFAULT

IDC_MAGNIFIER MENU
BEGIN
    POPUP "ファイル(&F)"
    BEGIN
        MENUITEM "終了(&X)", IDM_EXIT
        MENUITEM "オプション(&O)", IDM_OPTIONS
        MENUITEM SEPARATOR
        MENUITEM "バージョン情報(&A)", IDM_ABOUT
    END
END

IDC_MAGNIFIER ACCELERATORS
BEGIN
