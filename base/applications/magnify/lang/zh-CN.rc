LANGUAGE LANG_CHINESE, SUBLANG_CHINESE_SIMPLIFIED

IDC_MAGNIFIER MENU
BEGIN
    POPUP "文件(&F)"
    BEGIN
        MENUITEM "退出(&X)", IDM_EXIT
        MENUITEM "选项(&O)", IDM_OPTIONS
        MENUITEM SEPARATOR
        MENUITEM "关于(&A)", IDM_ABOUT
    END
END

IDC_MAGNIFIER ACCELERATORS
BEGIN
    "?", IDM_ABOUT, ASCII, ALT
    "/", IDM_ABOUT, ASCII, ALT
END

