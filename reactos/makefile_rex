#
# Global makefile
#

#
# Select your host
#
HOST = djgpp-linux
#HOST = mingw32-linux
#HOST = djgpp-msdos
#HOST = mingw32-windows

include rules.mak

#
# Required to run the system
#
COMPONENTS = kernel lib

#
# Select the server(s) you want to build
#
SERVERS = win32 posix linux os2

#
# Select the loader(s) you want to build
#
LOADERS = dos

#
# Select the device drivers and filesystems you want
#
KERNEL_SERVICES = parallel keyboard null mouse serial sound test

all: $(COMPONENTS) $(LOADERS) $(KERNEL_SERVICES)

#
# Device driver rules
#
test: dummy
	make -C services/test

test1: dummy
	make -C services/test1

null: dummy
	make -C services/null

parallel: dummy
	make -C services/parallel

keyboard: dummy
	make -C services/keyboard

mouse: dummy
	make -C services/mouse
	
serial: dummy
	make -C services/serial

sound: dummy
	make -C services/sound

#
# Kernel loaders
#

dos: dummy
	make -C loaders/dos

#
# Required system components
#

kernel: dummy
	make -C ntoskrnl

lib: dummy
	make -C lib

dummy:
